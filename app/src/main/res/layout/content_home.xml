<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/rel"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_home"
    tools:context="com.ironoid.experiment.HomeActivity"
    >
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Fundamentals of Computer Networks"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:clickable="true"
            style="@style/Base.Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Computer Graphics"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            style="@style/Base.Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Processor Architechture &amp; Interface"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            style="@style/Base.Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mathematics-III"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            style="@style/Base.Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Data Structures and Files"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginBottom="50dp"
            style="@style/Base.Widget.AppCompat.Button.Colored" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>
