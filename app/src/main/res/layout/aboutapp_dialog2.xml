<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2777af">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Experiment"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="0dp"
            android:textColor="#b6cae9"
            android:layout_marginLeft="0dp"
            android:textStyle="normal|bold|italic"
            android:background="#1d487d"
            android:textAlignment="center"
            android:textSize="40dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Finish"
            android:id="@+id/nxtbtn2"
            android:layout_alignParentBottom="true"
            android:background="#1d487d"
            android:textAlignment="center"
            android:textColor="#cff8ff"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/wcimg"
            android:src="@drawable/best"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="We are sure you will do it......"
            android:id="@+id/wctxt"
            android:layout_below="@+id/wcimg"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
</LinearLayout>